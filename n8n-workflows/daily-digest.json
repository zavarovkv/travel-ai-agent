      "type": "n8n-nodes-base.filter",
      "typeVersion": 2,
      "position": [
        900,
        300
      ]
    },
    {
      "parameters": {
        "jsCode": "const promptTemplate = $('Fetch Prompt').first().json.prompt;\n\nconst posts = $input.all().map(item => ({\n  channel: item.json.channel,\n  date: item.json.date,\n  text: item.json.text,\n}));\n\nif (posts.length === 0) {\n  return [];\n}\n\nconst postsText = posts\n  .map((p, i) => `${i + 1}. ${p.text}`)\n  .join('\\n\\n---\\n\\n');\n\nconst prompt = promptTemplate.replace('{posts}', postsText);\n\nreturn [{ json: { posts, prompt, post_count: posts.length } }];"
      },
      "id": "b2c3d4e5-0002-0002-0002-000000000005",
      "name": "Aggregate Posts",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
